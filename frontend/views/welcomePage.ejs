        <div class="carousel slide" id="myCarousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li class="active" data-slide-to="0" data-target="#myCarousel"></li>
                <li data-slide-to="1" data-target="#myCarousel"></li>
                <li data-slide-to="2" data-target="#myCarousel"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active" id="slide1">
                    <div class="carousel-caption">
                    </div><!-- end carousel-caption-->
                </div><!-- end item -->
                <div class="item" id="slide2">
                    <div class="carousel-caption">
                    </div><!-- end carousel-caption-->
                </div><!-- end item -->
                <div class="item" id="slide3">
                    <div class="carousel-caption">
                    </div><!-- end carousel-caption-->
                </div><!-- end item -->
            </div><!-- carousel-inner -->
            <!-- Controls -->
            <a class="left carousel-control" data-slide="prev" href="#myCarousel"><span class="icon-prev"></span></a>
            <a class="right carousel-control" data-slide="next" href="#myCarousel"><span class="icon-next"></span></a>
        </div><!-- end myCarousel -->
        <div class="row" id="bigCallout">
            <div class="well">
                <div class="page-header">
                    <h1>Our Compan's name <small>where happy families shop </small></h1>
                </div><!-- end page-header -->
                <p class="lead">Join us today and shop at our place for a happier pet :)</p>
                <div class="container">
                    <!-- <% signup %> -->
                    <% if (signup == false && emailexist == false ){ %>
                    <div class="alert alert-danger">
                        <strong>Error!</strong> an Error Occured during your signup, please try again</div>
                        <% }%>
                        <form  method="post" action="/signup" validate>
                            <table>
                                <tr>
                                    <td colspan="2">
                                        <h3>Let's get started. It's Free</h3> <br>
                                        Please enter following details
                                    </td>
                                </tr>
                                <tr>
                                    <td> <label class="control-label">First Name</label> </td>
                                    <td> <input type="text" name="firstname"  required style="margin-bottom:10px" value="<% if (data){ %> <%-data.firstname %> <%  }%>"/> </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="control-label"> Last Name</label> </td>
                                        <td><input type="text" name="lastname"  required style="margin-bottom:10px" value="<% if (data){ %> <%-data.lastname %> <%  }%>"/> </td>
                                    </tr>
                                    <tr>
                                        <td>  <label class="control-label">Email Id</label> </td>
                                        <td><input type="email" name="email"  required style="margin-bottom:10px" value="<% if (data){ %> <%-data.email %> <%  }%>"/>
                                            <% if (signup == false && emailexist ==true ){ %>
                                            <div class="alert alert-danger">
                                                <strong>Error!</strong> This email is already used, please try again
                                            </div>
                                            <% }%>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="control-label">Password</label> 
                                        </td>
                                        <td> <input type="password" name="password" required style="margin-bottom:10px"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div>
                                                <label class="control-label">Contact Number</label>
                                                <td> <input type="text" id="contactnumber" name="contactnumber" placeholder="555-555-5555" pattern="\d{3}-?\d{3}-?\d{4}"
                                                    value="<% if (data){ %> <%-data.contactnumber %> <%  }%>"/>
                                                </td>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>    <!-- address-line1 input-->
                                            <div class="control-group">
                                                <label class="control-label">Address Line 1</label>
                                                <div class="controls">
                                                    <input id="addrline1" name="addrline1" type="text" placeholder="address line 1"
                                                    class="input-xlarge" value="<% if (data){ %> <%-data.address.addrline1 %> <%  }%>"/>
                                                    <p class="help-block">Street address, P.O. box, company name, c/o</p>
                                                </div>
                                            </div>
                                        </td>
                                        <!-- address-line2 input-->
                                        <td>
                                            <div class="control-group">
                                                <label class="control-label">Address Line 2</label>
                                                <div class="controls">
                                                    <input id="addrline2" name="addrline2" type="text" placeholder="address line 2" class="input-xlarge"
                                                    value="<% if (data){ %> <%-data.address.addrline2 %> <%  }%>" />
                                                    <p class="help-block">Apartment, suite , unit, building, floor, etc.</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <!-- city input-->
                                        <td>
                                            <div class="control-group">
                                                <label class="control-label">City / Town</label>
                                                <div class="controls">
                                                    <input id="city" name="city" type="text" placeholder="city" class="input-large"
                                                    value="<% if (data){ %> <%-data.address.city %> <%  }%>" />
                                                    <p class="help-block"></p>
                                                </div>
                                            </div>
                                        </td>
                                        <!-- region input-->
                                        <td>
                                            <div class="control-group">
                                                <label class="control-label">State / Province / Region</label>
                                                <div class="controls">
                                                    <input id="state" name="state" type="text" placeholder="state / province / region"
                                                    class="input-large" value="<% if (data){ %> <%-data.address.state %> <%  }%>"/ >
                                                    <p class="help-block"></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <!-- postal-code input-->
                                            <div class="control-group">
                                                <label class="control-label">Zip / Postal Code</label>
                                                <div class="controls">
                                                    <input id="zip" name="zip" type="text" placeholder="zip or postal code"
                                                    class="input-medium"   value="<% if (data){ %> <%-data.address.zip %> <%  }%>"/>
                                                    <p class="help-block"></p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="control-group">
                                                <label class="control-label"> Country</label>
                                                <td>      <select id="country" name="country" class="input-xlarge">
                                                    <option value="" selected="selected">(please select a country)</option>
                                                    <option value="US" selected >United States</option>
                                                    <option value="CA">Canada</option>
                                                    <option value="ME">Mexico</option>
                                                </select>
                                            </td>
                                        </div>
                                    </td>
                                </tr>
                                <div class="control-group">
                                    <td><input  class="btn btn-default btn-xs" value="Signup" type="submit"/> </td>
                                    <td> <input class="btn btn-default btn-xs" type="reset" value="Clear" /> </td>
                                </div>
                            </table>
                        </form>
                    </div>
                    <!-- <a href="" class="btn btn-large btn-link">more info</a> -->
                </div><!-- end well -->
            </div><!-- end col-12 -->
        </div><!-- end bigCallout -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                    </div><!-- end col-sm-2 -->
                    <div class="col-sm-4">
                        <h6>About Us</h6>
                        <p>
                            we are passionate about pet health and nutrition.food is the essential element for pets' health. we provide variety of diet option that would be hard to find in regular stores.our mission is to provide  pet owners with healthier, natural nutrition options And we genuinely enjoy helping pet owners to make well informed healthy choices.
                        </p>
                    </div><!-- end col-sm-4 -->
                    <div class="col-sm-2">
                        <h6>Navigation</h6>
                        <ul class="unstyled">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">Links</a></li>
