    <div class="panel panel-default panel-order">
        <div class="panel-heading">
            <strong>Order history</strong>
            <div class="btn-group pull-right">

                <button type="button" class="btn btn-default dropdown-toggle">
                    <i>Total : </b></i>
                    <i id="ordersNum"></i>
                </button>


            </div>
